<Label>:
    size_hint_y: None
    height: 30
    font_size: 16
    color: (0.4, 0.4, 0.4, 1)

<TextInput>:
    size_hint_y: None
    multiline: False
    height: 30
    font_size: 16
    background_color: (0.8, 0.8, 0.8, 1)
    foreground_color: (0.2, 0.2, 0.2, 1)

<Button>:
    background_normal: ""

<LoginPage>:
    username: username
    password: password

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 60
        spacing: 10

        Label:
            text: "Selamat datang di Gabut App!"
            font_size: 28

        Label: 
            text: "Username"
        TextInput:
            id: username

        Label:
            text: "Password"
        TextInput:
            id: password
            password: True

        Button:
            text: "Login"
            background_color: (0.2, 0.6, 1, 1)
            color: (1, 1, 1, 1)
            on_press: root.login()
