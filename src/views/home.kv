<Home>:
    ## id halaman
    name: "home"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        center_y: root.height
        padding: 20
        spacing: 10

        TitleLabel:
            text: "Welcome"

        Button:
            text: "Login"
            on_press:
                app.root.to("login")
                root.slide_to("left")

        Button:
            text: "Register"
            on_press:
                app.root.to("register")
                root.slide_to("right")
